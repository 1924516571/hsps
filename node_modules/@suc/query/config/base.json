{
  "compilerOptions": {
    "outDir": "../dist/umd",
    "downlevelIteration":true,
    "target": "es5",
    "module": "umd",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [

    ],
    "paths": {
      "@/*": [
        "../src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "../src/**/*.ts",
    "../src/**/*.tsx",
    "../src/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}